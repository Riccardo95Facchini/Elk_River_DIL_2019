<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="facchini.riccardo.Elk_River_DIL_2019">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Customer_Package.Activity_Customer.Activity_Customer_SelectedEmployeeInfo" />
        <activity android:name=".Customer_Package.Activity_Customer.Activity_Customer_SelectedSpotInfo" />
        <activity android:name=".Chat.Activity_Chat_Homepage" />
        <activity android:name=".Chat.Activity_Chat" />
        <activity android:name=".Customer_Package.Activity_Customer.Activity_Customer_SelectedSearch" />
        <activity android:name=".Activity_Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Customer_Package.Activity_Customer.Activity_Customer_Create"
            android:label="@string/customerRegistration"
            android:parentActivityName=".Activity_Login" />
        <activity
            android:name=".Employee_Package.Activity_Employee.Activity_Employee_Create"
            android:label="@string/employeeRegistration"
            android:parentActivityName=".Activity_Login" />
        <activity
            android:name=".Employee_Package.Activity_Employee.Activity_Employee_TagHours"
            android:label="@string/tagsAndHours" />
        <activity
            android:name=".Employee_Package.Activity_Employee.Activity_Employee_Profile"
            android:label="@string/profile" />
        <activity android:name=".Customer_Package.Activity_Customer.Activity_Customer" />
        <activity android:name=".Employee_Package.Activity_Employee.Activity_Employee" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_api_key" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

</manifest>